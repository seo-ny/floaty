{
  "name": "@seo-ny/floaty-core",
  "version": "1.0.0",
  "description": "Floating logic core for positioning elements (vanilla JS)",
  "main": "./dist/floaty.umd.js",
  "module": "./dist/floaty.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/floaty.mjs",
      "require": "./dist/floaty.umd.js"
    }
  },
  "scripts": {
    "build": "vite build --watch",
    "build:once": "vite build",
    "release:next": "node ../../scripts/release-next.js",
    "release:prod": "node ../../scripts/release-prod.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage && open ./__tests__/coverage/index.html"
  },
  "files": [
    "dist"
  ],
  "author": "seo-ny",
  "license": "MIT",
  "keywords": [
    "floaty",
    "floaty-core",
    "floating",
    "floating-elements",
    "core",
    "vanilla-js"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.3",
    "jsdom": "^26.1.0",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seo-ny/floaty.git",
    "directory": "packages/floaty-core"
  },
  "bugs": {
    "url": "https://github.com/seo-ny/floaty/issues"
  },
  "homepage": "https://github.com/seo-ny/floaty#readme"
}
