{
  "name": "floaty",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "build:floaty:watch": "pnpm --filter @seo-ny/floaty-core build",
    "build:floaty:once": "pnpm --filter @seo-ny/floaty-core build-once",
    "vanilla:sb": "pnpm --filter vanilla storybook",
    "vanilla:sb:build": "pnpm --filter vanilla build-storybook",
    "dev": "pnpm build:floaty:once && concurrently \"pnpm build:floaty:watch\" \"pnpm vanilla:sb\"",
    "test": "pnpm --filter @seo-ny/floaty-core test"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3",
    "vite": "^6.3.3"
  }
}
